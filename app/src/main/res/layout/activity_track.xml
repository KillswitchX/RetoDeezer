<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorGrey"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorFucsia"
        android:id="@+id/track_linear_1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/back"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/track_btn_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Track"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/track_linear_1"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:id="@+id/track_image"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Track name"
            android:textSize="35sp"
            android:id="@+id/track_name"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Artist"
            android:id="@+id/track_artist"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="Album"
            android:id="@+id/track_album"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:text="Duration"
            android:id="@+id/track_duration"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#9400D3"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:id="@+id/btn_listen"

            />







    </LinearLayout>




</RelativeLayout>